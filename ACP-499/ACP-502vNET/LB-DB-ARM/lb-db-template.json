{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "defaultValue": "lbuseast2devtestSAPhana"
        },
        "location": {
            "type": "string",
            "defaultValue": "eastus2"
        },
        "subnetid": {
            "type": "string",
            "defaultValue": "/subscriptions/dcfe91a7-07d9-42dc-b749-b9dfedf9ac86/resourceGroups/USEast2-SAP-devtest-rg/providers/Microsoft.Network/virtualNetworks/useast2dev-testvnet/subnets/useast2dev-saphana"
        },
        "loadBalancerNameDB": {
            "type": "string",
            "defaultValue": "lbuseast2devtestSAPhana"
        },
        "loadBalancerFrontendHANADB": {
            "type": "string",
            "defaultValue": "FrontEndIP"
        },
        "privateIPAddress": {
            "type": "string",
            "defaultValue": "192.168.1.100"
        },
        "probePortHANADB": {
            "type": "string",
            "defaultValue": "probe-hana"
        },
        "backendPoolHANADB": {
            "type": "string",
            "defaultValue": "backendpoolDB"
        },
        "sku": {
            "type": "string",
            "defaultValue": "Standard"
        },
        "tier": {
            "type": "string",
            "defaultValue": "Regional"
        }
    },
    "resources": [
        {
            "apiVersion": "2021-05-01",
            "name": "[parameters('name')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": {},
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "FrontEndIP",
                        "properties": {
                            "privateIPAddress": "[parameters('privateIPAddress')]",
                            "privateIPAddressVersion": "IPv4",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[parameters('subnetid')]"
                            }
                        },
                        "zones": [
                            "2",
                            "3",
                            "1"
                        ]
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "backend"
                    }
                ],
                "probes": [
                    {
                        "name": "probe-hana",
                        "properties": {
                            "protocol": "Tcp",
                            "port": 62503,
                            "requestPath": null,
                            "intervalInSeconds": 5,
                            "numberOfProbes": 1
                        }
                    }
                ],
                "loadBalancingRules": [
                    {
                        "name": "[parameters('loadBalancerNameDB')]",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[resourceId('Microsoft.Network/loadBalancers/frontendIpConfigurations', parameters('loadBalancerNameDB'), parameters('loadBalancerFrontendHANADB'))]"
                            },
                            "frontendPort": 0,
                            "backendPort": 0,
                            "enableFloatingIP": true,
                            "idleTimeoutInMinutes": 30,
                            "protocol": "All",
                            "loadDistribution": "Default",
                            "probe": {
                                "id": "[resourceId('Microsoft.Network/loadBalancers/probes', parameters('loadBalancerNameDB'), parameters('probePortHANADB'))]"
                            },
                            "disableOutboundSnat": true,
                            "enableTcpReset": false,
                            "backendAddressPools": [
                                {
                                    "id": "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools', parameters('loadBalancerNameDB'), parameters('backendPoolHANADB'))]"
                                }
                            ]
                        }
                    }
                ],
                "inboundNatRules": [],
                "outboundRules": []
            },
            "sku": {
                "name": "[parameters('sku')]",
                "tier": "[parameters('tier')]"
            }
        }
    ]
}